<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card text-color">
      <h4 class="card-title text-center">Create To-Do-List</h4>
      <div class="card-body">

        <%= form_tag web_site_create_to_do_list_path(@user.id), method: :post do |f| %>
          <% if @to_do_list.errors.size() > 0 %>
          <div class="alert alert-danger">
            <ul>
              <% @to_do_list.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
          <%end%>
          <div class="form-group">
            <label class="col-form-label">Title</label>
            <%= text_field_tag :title, @to_do_list.try(:title),class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <label class="col-form-label">Description</label>
            <%= text_area_tag :description, @to_do_list.try(:description),class: "form-control"%>
          </div>

          <%= submit_tag "Create", class: "btn btn-success"%>
          <%= link_to "Cancel", web_site_to_do_list_index_path(@user.id), class: "btn btn-light", style: "float: right" %>
        <% end %>

      </div><!-- card-body -->
    </div><!-- card -->

  </div><!-- col-md-6 offset-md-3 -->
</div><!-- row -->