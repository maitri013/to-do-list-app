<div class="row" style="padding: 50px;">
  <div class="col-md-8 offset-md-2">

    <%= form_tag web_site_update_to_do_item_path(@user.id, @to_do_list.id, @to_do_item.id), method: :put do |f| %>
    <div class="card">

      <div class="card-body">
        <div class="form-group">
          <label class="col-form-label">Title</label>
          <%= text_field_tag :title, @to_do_item.title, class: "form-control"%>
        </div>

        <%= submit_tag "Update", class: "btn btn-warning"%>
        <%= link_to "Cancel", web_site_to_do_items_index_path(@user.id, @to_do_list.id, @to_do_item.id), class: "btn btn-light", style: "margin-left: 10px;" %>
        <%= link_to "Delete", web_site_delete_to_do_item_path(@user.id, @to_do_list.id, @to_do_item.id), class: "btn btn-danger", style: "float: right", method: :delete  %>
      </div><!-- card-body -->
    </div><!-- card -->
    <% end %>

  </div><!-- col-md-6 offset-md-3 -->
</div><!-- row -->